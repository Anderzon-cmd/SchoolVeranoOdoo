        <record id="student_tree_view" model="ir.ui.view">
            <field name="name">student.tree.view</field>
            <field name="model">school.student</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name" />
                    <field name="date_birthday" />
                </list>
            </field>
        </record>



        <record id="student_form_view" model="ir.ui.view">
            <field name="name">student.form.view</field>
            <field name="model">school.student</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name" />
                    </group>
                    <group>
                        <field name="date_birthday" />
                    </group>

                    <group>
                        <field name="employee_id" placeholder="Type to find a employee..." />
                    </group>

                </form>
            </field>
        </record>


        <record id="student_action" model="ir.actions.act_window">
            <field name="name">Students</field>
            <field name="res_model">school.student</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="menu_root" name="School" />
        <menuitem id="menu_students" name="Students" parent="menu_root" />
        <menuitem id="menu_students_list" name="Student List" parent="menu_students" action="student_action" />
